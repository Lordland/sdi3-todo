<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>
	<managed-bean>
		<managed-bean-name>viajes</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.BeanViajes</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>usuarios</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.BeanUsuario</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>apuntados</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.BeanApplication</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>settings</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.BeanSettings</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>login.xhtml</display-name>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{usuarios.iniciarSesion}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/prohibido/principal.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{usuarios.iniciarSesion}</from-action>
			<from-outcome>fracaso</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>registro</from-outcome>
			<to-view-id>/registrarse.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>registrarse.xhtml</display-name>
		<from-view-id>/registrarse.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{usuarios.crearUsuario}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{usuarios.crearUsuario}</from-action>
			<from-outcome>fracaso</from-outcome>
			<to-view-id>/registrarse.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>principal.xhtml</display-name>
		<from-view-id>/prohibido/principal.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>cerrar</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>modificar</from-outcome>
			<to-view-id>/prohibido/modificar.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{apuntados.vistaPromotor}</from-action>
			<from-outcome>promotor</from-outcome>
			<to-view-id>/prohibido/promotor.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>promotor.xhtml</display-name>
		<from-view-id>/prohibido/promotor.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>principal</from-outcome>
			<to-view-id>/prohibido/principal.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>cerrar</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>crearViaje.xhtml</display-name>
		<from-view-id>/prohibido/crearViaje.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>promotor</from-outcome>
			<to-view-id>/prohibido/promotor.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{usuarios.crearViaje}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/prohibido/promotor.xhtml</to-view-id>			
		</navigation-case>
		<navigation-case>
			<from-action>#{usuarios.crearViaje}</from-action>
			<from-outcome>fracaso</from-outcome>
			<to-view-id>/prohibido/promotor.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>modificarViaje.xhtml</display-name>
		<from-view-id>/prohibido/modificarViaje.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>promotor</from-outcome>
			<to-view-id>/prohibido/promotor.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{viajes.cambiaViaje}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/prohibido/promotor.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{viajes.cambiaViaje}</from-action>
			<from-outcome>fracaso</from-outcome>
			<to-view-id>/prohibido/promotor.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>modificar.xhtml</display-name>
		<from-view-id>/prohibido/modificar.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>principal</from-outcome>
			<to-view-id>/prohibido/principal.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{usuarios.modificarUsuario}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/prohibido/principal.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{usuarios.modificarUsuario}</from-action>
			<from-outcome>fracaso</from-outcome>
			<to-view-id>/prohibido/modificar.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>cerrar</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
